@page
@using System.Diagnostics.Eventing.Reader
@model RocketMan.Web.Pages.Launch.Upcoming.IndexModel
@{
    ViewData["Title"] = "Upcoming Launches";
}


<h1>Upcoming Launches</h1>
<form method="post">

    <table class="table table-hover">
        <thead>
        <tr>
            @*<th scope="col">Id</th>*@
            <th scope="col">Mission name</th>
            <th scope="col">Launch date</th>
            <th scope="col">Launchpad</th>
            <th scope="col"></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var launch in Model.UpcomingList)
        {
            <tr>
                @*<th scope="row">@launch.Id</th>*@
                <td>@launch.MissionName</td>
                <td>@launch.LaunchDate.ToString("R")</td>
                <td>@launch.Launchpad</td>
                <td>
                    @if (@launch.IsFavorite)
                    {
                        <button type="submit" class="btn btn-danger" asp-page-handler="RemoveFavorite"
                                asp-route-id="@launch.Id">
                            Remove from favorite
                        </button>
                    }
                    else
                    {
                        <button type="submit" class="btn btn-primary" asp-page-handler="AddFavorite"
                                asp-route-id="@launch.Id">
                            Add to favorite
                        </button>
                    }
                </td>
            </tr>
        }
        </tbody>
    </table>
</form>